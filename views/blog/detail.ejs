<!-- {:widget('Layout/head', ['key'=>$blog.keywords, 'content'=>$blog.description, 'title'=>$blog.article_name])} -->
<%-include("../widget/head", {key: blog.keywords, content: blog.description, title: blog.article_name})%>
<div id="fh5co-page">
		<a href="#" class="js-fh5co-nav-toggle fh5co-nav-toggle"><i></i></a>
		<%-include("../widget/menu", {name: 'blog'})%>

		<div id="fh5co-main">
			<div class="fh5co-narrow-content">
				<h2 class="fh5co-heading animate-box" data-animate-effect="fadeInLeft">
					<%=blog.article_name%>
				</h2>
				<div class="desc animate-box" data-animate-effect="fadeInLeft">
					<span><%=moment(blog.article_time*1000).format('YYYY-MM-DD')%></span> 
					<span><small>by Admin </small> / <small> <%=blog.tags%> </small> / <small> <i class="icon-comment"></i> <%=blog.article_click%></small></span>
				</div>
				<div class="row row-bottom-padded-md animate-box" data-animate-effect="fadeInLeft" style="background-color: #fff;padding: 15px;margin-top: 15px;">
					<%-blog.article_content%>
				</div>
			</div>
			
		</div>

</div>



<%-include('../common/commonJs')%>